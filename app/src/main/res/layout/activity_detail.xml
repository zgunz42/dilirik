<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true" android:clipToPadding="true">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".DetailActivity">

		<ImageView
				android:layout_width="197dp"
				android:scaleType="centerCrop"
				android:layout_marginStart="@dimen/activity_vertical_margin"
				android:layout_marginTop="@dimen/activity_horizontal_margin"
				android:layout_height="256dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/album_thumbnail"
				app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
				android:contentDescription="@string/album_thumbnail"/>
		<LinearLayout
				app:layout_constraintStart_toEndOf="@+id/album_thumbnail"
				app:layout_constraintTop_toTopOf="parent"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="wrap_content">
			<TextView
					android:text="@string/label_title"
					android:layout_width="match_parent"
					android:textSize="18sp"
					android:textStyle="bold"
					android:layout_height="wrap_content" android:id="@+id/label_title"/>
			<TextView
					tools:hint="@sample/music_title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/title"/>
			<TextView
					android:text="@string/label_release"
					android:layout_marginTop="@dimen/activity_vertical_margin"
					android:layout_width="match_parent"
					android:textStyle="bold"
					android:layout_height="wrap_content" android:id="@+id/label_release"/>
			<TextView
					tools:hint="2 September 2019"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/release"/>
			<TextView
					android:text="@string/artist"
					android:layout_marginTop="@dimen/activity_vertical_margin"
					android:layout_width="match_parent"
					android:textStyle="bold"
					android:layout_height="wrap_content" android:id="@+id/label_artist"/>
			<TextView
					tools:hint="Dean Trbl"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/artist"/>
			<TextView
					android:text="@string/label_producer"
					android:layout_marginTop="@dimen/activity_vertical_margin"
					android:layout_width="match_parent"
					android:textStyle="bold"
					android:layout_height="wrap_content" android:id="@+id/label_producer"/>
			<TextView
					tools:hint="G-Dragon, Teddy Park, Yang Hyun-suk"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/producer"/>
		</LinearLayout>
		<androidx.recyclerview.widget.RecyclerView
				android:layout_width="match_parent"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				tools:itemCount="6"
				android:id="@+id/same"
				app:layout_constraintTop_toBottomOf="@+id/album_thumbnail"
				android:layout_height="wrap_content" android:scrollbars="horizontal"
				android:orientation="horizontal"
				android:scrollbarStyle="outsideOverlay"
				tools:listitem="@layout/card_lyric"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
		<LinearLayout
				app:layout_constraintTop_toBottomOf="@+id/same"
				android:orientation="vertical"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:layout_marginStart="@dimen/activity_horizontal_margin"
				android:layout_marginEnd="@dimen/activity_horizontal_margin"
				android:layout_width="match_parent"
				android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
			<TextView
					android:text="@string/tag_genre"
					android:layout_marginTop="@dimen/activity_vertical_margin"
					android:layout_marginBottom="8dp"
					android:textStyle="bold"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/textView4"/>
			<TextView
					tools:hint="@string/sample_genre"
					android:paddingStart="3pt"
					android:paddingEnd="3pt"
					android:paddingTop="1pt"
					android:paddingBottom="1pt"
					android:background="@drawable/genre_badge" android:textColor="#8BC34A"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:id="@+id/music_genre"/>
			<TextView
					android:text="@string/label_lyric"
					android:layout_marginTop="@dimen/activity_vertical_margin"
					android:layout_marginBottom="8dp"
					android:textStyle="bold"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/label_lyric"/>
			<TextView
					tools:hint="@sample/lyric.json/data/lyric"
					android:layout_width="match_parent"
					android:layout_height="wrap_content" android:id="@+id/music_lyric"
					android:textIsSelectable="true"
					android:letterSpacing="30.0sp"
					android:textAlignment="viewStart"
					app:autoSizeTextType="none"
					android:elegantTextHeight="true" android:textScaleX="1.0"
					android:includeFontPadding="false"/>
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>